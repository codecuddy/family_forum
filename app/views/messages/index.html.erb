<h2 class="welcome-message">Join any of the <%= @messages.count %> conversations below!</h2>
<% @messages.each do |message| %>  
  <div class="col-md-10 col-md-offset-1">      
    <div class="message">        
      <h2 class="message-title"><%= message.title %></h2>
      <h4 class="preview_description"><%= message.description.truncate_words(10) %></h4></br>
      <p>Message Created: <%= time_ago_in_words(message.created_at) %> ago</p>
	  <p>Started By: <%= message.user.email %></p>     

	  <%= link_to (message) do %>
	  	<p class="join_discussion_link">Join This Conversation (<%= message.comments.count %>)</p>
	  	<% end %><hr>   
      	    
    </div>  
 </div>
<% end %>


