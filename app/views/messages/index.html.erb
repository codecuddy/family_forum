<% @messages.each do |message| %>  
  <div class="col-md-10 col-md-offset-1">      
    <div class="message">        
      <h2 class="message-title"><%= message.title %></h2>
      <h4 class="message-desc"><%= message.description.truncate_words(10) %></h4></br>
      <p class="message-posted-by">Message Created: <%= time_ago_in_words(message.created_at) %> ago</p>
	  <p class="message-posted-by">Started By: <%= message.user.email %></p>     

	  <%= link_to (message) do %>
	  	<p>Join This Conversation (<%= message.comments.count %>)</p>
	  	<% end %><hr>   
      	    
    </div>  
 </div>
<% end %>


